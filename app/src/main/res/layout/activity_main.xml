<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_orange"
    tools:context=".MainActivity"
    android:id="@+id/rl5"
    tools:ignore="ExtraText">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:id="@+id/ll5"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registartion_text"
            android:fontFamily="@font/ljk_ccrickveitch_wo5_otf"
            android:text="Registration"
            android:layout_gravity="center"
            android:textColor="@color/custom_white"
            android:textSize="30sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="30dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_border"
            android:padding="20dp"
            android:id="@+id/ll6"
            >

            <TextView
                android:id="@+id/first_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/reg_text"
                android:fontFamily="@font/ljk_ccrickveitch_wo5_otf"
                android:text="first name:"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:fontFamily="@font/duntin_serif_bold_ttf"
                android:backgroundTint="@color/custom_white"
                android:textSize="20sp"
                android:id="@+id/first_name_text_inp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/reg_text"
                android:fontFamily="@font/ljk_ccrickveitch_wo5_otf"
                android:text="last name:"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:id="@+id/last_name_text"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:fontFamily="@font/duntin_serif_bold_ttf"
                android:backgroundTint="@color/custom_white"
                android:textSize="20sp"
                android:id="@+id/last_name_text_inp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/reg_text"
                android:fontFamily="@font/ljk_ccrickveitch_wo5_otf"
                android:text="birthday:"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:id="@+id/birthday_text"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:fontFamily="@font/duntin_serif_bold_ttf"
                android:backgroundTint="@color/custom_white"
                android:textSize="20sp"
                android:id="@+id/birthday_text_inp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/reg_text"
                android:fontFamily="@font/ljk_ccrickveitch_wo5_otf"
                android:text="email:"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:id="@+id/email_text"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:fontFamily="@font/duntin_serif_bold_ttf"
                android:backgroundTint="@color/custom_white"
                android:textSize="20sp"
                android:id="@+id/email_text_inp"
                />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_reg_in"
                android:fontFamily="@font/ljk_ccrickveitch_wo5_otf"
                android:text="Register"
                android:textColor="@color/custom_white"
                android:textSize="25sp"
                android:paddingHorizontal="20dp"
                android:layout_gravity="center"
                />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>