<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaintView">

    <com.example.mainandroidproject.PaintViewBackand
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <ImageButton

            android:id="@+id/btn_brush_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/orrange_ripple"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_brush_setiings" />
        <ImageButton
            android:id="@+id/btn_clear_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/orrange_ripple"
            android:clickable="true"
            android:focusable="true"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_delete_picture" />
        <ImageButton
            android:id="@+id/btn_save_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/orrange_ripple"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_save_picture" />


    </LinearLayout>

</RelativeLayout>